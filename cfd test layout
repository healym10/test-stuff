function renderQuiz(){
  const quiz=document.getElementById("quiz");
  questions.forEach((item,idx)=>{
    const div=document.createElement("div");
    div.className="question";

    const q=document.createElement("div");
    q.textContent = (idx+1) + ". " + item.q;
    div.appendChild(q);

    const opts=document.createElement("div");
    opts.className="options";

    item.opts.forEach((o,i)=>{
      const id="q"+idx+"_"+i;
      const label=document.createElement("label");
      const input=document.createElement("input");
      input.type="radio";
      input.name="q"+idx;
      input.id=id;
      input.onclick=()=>{
        // reset all labels for this question
        const labels = opts.querySelectorAll("label");
        labels.forEach(L => { L.className=""; L.textContent=L.textContent.replace(" ✓","").replace(" ✗",""); });
        if(i===item.ans){
          label.className="correct";
          label.textContent=o+" ✓";
        } else {
          label.className="incorrect";
          label.textContent=o+" ✗";
        }
      };
      label.setAttribute("for",id);
      label.textContent=o;
      opts.appendChild(input);
      opts.appendChild(label);
    });

    div.appendChild(opts);
    quiz.appendChild(div);
  });
}

renderQuiz();
</script>
</body>
</html>
